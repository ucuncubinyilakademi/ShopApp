@model CategoryListModel
@{
    ViewData["Title"] = "CategoryList";
}

<h1>Admin Categories</h1>
<hr />
@if (Model.Categories.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>                
                <td></td>                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                 <td>@item.Id</td>
                 <td>@item.Name</td>
                    <td>
                        <a class="btn btn-warning btn-sm" href="/admin/categories/@item.Id">Edit</a>
                        <form action="/admin/deletecategory" method="post" style="display:inline">
                            <input type="hidden" name="categoryId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>

                    </td>
                </tr>
            }

        </tbody>
    </table>
}

else
{
    <div class="alert alert-warning">
        <h4>No Products</h4>
    </div>
}

